
@using MyMobileShopping.Models;
@Model CartViewModel
<script>
    var totalRate=@Model.Total
</script>

@Styles.Render("~/Content/CheckOutPage.css")

<h1>Your Cart (@Model.Products.Count Items)</h1>

<table class="table table-bordered table-striped table-hover">
    <thead>
        <tr>
            <th>S.No</th>
            <th>Mobile Name</th>
            <th>Mobile Price</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Products.Count; i++)
        {
            <tr>
                <td>@(i + 1)</td>
                <td>@Model.Products[i].Name</td>
                <td>@Model.Products[i].Amount</td>
            </tr>
        }
        <tr>
            <td colspan="2">Sub Total</td>
            <td>@Model.SubTotal</td>
        </tr>
        <tr>
            <td colspan="2">Tax</td>
            <td>@Model.Tax</td>
        </tr>
        <tr>
            <td colspan="2">Discount</td>
            <td>@Model.Discount</td>
        </tr>
        <tr>
            <td colspan="2">Grand Total</td>
            <td>@Model.Total</td>
        </tr>
    </tbody>


</table>
<div class="payment-Options">
    <h3>Payment Options</h3>
    <input type="radio" id="creditCard" name="payment-Options" value="card">
    <label for="creditCard">CREDIT CARD</label><br>
    <input type="radio" id="cod" name="payment-Options" value="cod">
    <label for="cod">COD</label><br>
</div>
<div class="checkOut">
    <button type="button" class="btn btn-primary disabled" id="checkOut">CheckOut</button>
</div>
@section scripts{
    <script src="~/Scripts/Cart.js"></script>
}